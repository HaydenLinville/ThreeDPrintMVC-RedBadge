@model IEnumerable<Models.Material.MaterialListItem>

@{
    ViewBag.Title = "Default";
}




<div class="row d-flex justify-content-between">

    <h2 class="text-white">Material Examples</h2>
    <div class="row mr-1">

        <div class="ml-3">
            <input type="button" value="Add Your Own Material" class="btn btn-primary btn-lg" onclick="window.location = '@Url.Action("Create")'" />
        </div>


    </div>

</div>



<div class="d-flex flex-lg-row flex-column flex-wrap align-items-md-center justify-content-lg-center">
    @foreach (var item in Model)
    {


        <div class="col-2 p-2 mr-4 card text-warning bg-dark border-warning mb-3" style="max-width: 20rem;">
            <div class="card-header bg-secondary text-light">@Html.DisplayFor(Modelitem => item.MaterialBrand)</div>
            @if (item.Image != null && item.Image.Count() > 0)
            {
                <img class="card-img-top mt-1" height="150" width="150" src="/Material/RetrieveMImage/@item.MaterialId" alt="" />

            }
            else
            {
                <img class="card-img-top mt-1" src="~/Content/img/nomaterial.png" />
            }
            <div class="card-body bg-dark">

                <p class="card-text"> @Html.DisplayFor(Modelitem => item.MaterialType)</p>

            </div>
            <div class="d-table-row card-footer bg-secondary">
               

                <input type="button" value="Detail" class="btn btn-dark btn-sm btn-block mt-1" onclick="window.location = '@Url.Action("DefaultDetail", new {id = item.MaterialId})'" />

            </div>
        </div>

    }
</div>

