@model Models.Material.MaterialDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete @Model.MaterialBrand.ToString()</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="form-horizontal">

    <hr />
    <dl class="dl-horizontal col-md-offset-1 col-md-11">

        <dt>
            @Html.DisplayNameFor(model => model.MaterialBrand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaterialBrand)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaterialType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaterialType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>
        <br />

        <div class="dl-horizontal">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-md-offset-1 col-md-11">
                    <input type="submit" value="Delete" class="btn btn-danger" />

                    <input type="button" value="Cancel" class="btn btn-default" onclick="window.location= '@Url.Action("Index", "Material", new { id= Model.MaterialId })'" />
                </div>
            }
        </div>
    </dl>

</div>
