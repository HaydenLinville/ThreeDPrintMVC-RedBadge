@model Models.Material.MaterialDetail

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-white p-3 rounded-pill"style="background-image:url(../../Content/img/yellow.jpeg)" >Delete @Model.MaterialBrand.ToString()</h2>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div class="d-flex justify-content-center">
    <div>
        <div class="card text-danger bg-dark border-danger mb-3 p-2" style="max-width: 20rem;">
            <div class="card-header bg-secondary text-light">Material Info:</div>
            @if (Model.Image != null && Model.Image.Count() > 0)
            {
                <img class="card-img-top mt-1" src="/Material/RetrieveMImage/@Model.MaterialId" alt="" />

            }
            else
            {
                <img class="card-img-top mt-1" width="300" height="300" src="~/Content/img/nomaterial.png" />
            }
            <div class="card-body ">
                <p class="card-title">@Html.DisplayNameFor(model => model.MaterialBrand): @Html.DisplayFor(model => model.MaterialBrand)</p>
                <p class="card-text">@Html.DisplayNameFor(model => model.MaterialType):  @Html.DisplayFor(model => model.MaterialType)</p>
                <p class="card-text">@Html.DisplayNameFor(model => model.Color):  @Html.DisplayFor(model => model.Color)</p>

            </div>
            <div class="card-footer bg-secondary">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-offset-1 col-md-11 d-flex justify-content-between ">
                        <input type="submit" value="Delete" class="btn btn-danger" />

                        <input type="button" value="Cancel" class="btn btn-light" onclick="goPrev()" />
                        <script>
                            function goPrev() { window.history.back(); }
                        </script>
                    </div>
                }


            </div>
        </div>

    </div>
</div>