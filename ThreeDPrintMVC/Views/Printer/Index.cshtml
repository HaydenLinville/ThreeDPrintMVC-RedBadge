@model IEnumerable<Models.PrinterModels.PrinterListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Your Printers</h2>

<br />

@if (TempData.ContainsKey("SaveResult"))
{

    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.PrinterBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrinterModel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.PrinterBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrinterModel)
            </td>
            <td>
                <input type="button" value="Detail" class="btn btn-default btn-xs" onclick="window.location = '@Url.Action("Detail", new {id = item.PrinterId})'" />
                <input type="button" value="Edit" class="btn btn-warning btn-xs" onclick="window.location = '@Url.Action("Edit", new {id = item.PrinterId})'" />
                <input type="button" value="Delete" class="btn btn-danger btn-xs" onclick="window.location = '@Url.Action("Delete", new {id = item.PrinterId})'" />
            </td>
        </tr>
    }

</table>
<div>
    <input type="button" value="Add New Printer" class="btn btn-primary btn-lg" onclick="window.location = '@Url.Action("Create")'" />
</div>