@model IEnumerable<Models.PrinterModels.PrinterListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-white">Your Printers</h2>

<br />

@if (TempData.ContainsKey("SaveResult"))
{

    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table table-hover border-dark">
    <thead class="">
        <tr class="table-dark">
            <th class="text-dark" scope="col">
                @Html.DisplayNameFor(model => model.PrinterBrand)
            </th>
            <th class="text-dark" scope="col">
                @Html.DisplayNameFor(model => model.PrinterModel)
            </th>
            <th class="text-dark">Image</th>
            <th class="text-dark" scope="col">Update/Delete</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr class="table-success">

            <td>
                @Html.DisplayFor(modelItem => item.PrinterBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrinterModel)
            </td>
           @if(item.Image.Count() != 0)
                {

            <td> <img class="img-thumbnail" width="60" height="60" src="/Printer/RetrieveImage/@item.PrinterId" alt="No Picture" /></td>
           }
           else
                {

               <td>N/A</td>
                }

            <td>
                <input type="button" value="Detail" class="btn btn-secondary btn-sm" onclick="window.location = '@Url.Action("Detail", new {id = item.PrinterId})'" />
                <input type="button" value="Edit" class="btn btn-warning btn-sm" onclick="window.location = '@Url.Action("Edit", new {id = item.PrinterId})'" />
                <input type="button" value="Delete" class="btn btn-danger btn-sm" onclick="window.location = '@Url.Action("Delete", new {id = item.PrinterId})'" />
            </td>
        </tr>
    }

</table>
<div>
    <input type="button" value="Add New Printer" class="btn btn-primary btn-lg" onclick="window.location = '@Url.Action("Create")'" />
</div>